{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=convocado_fc;Username=postgres;Password=postgres;Include Error Detail=true"
  },
  "Jwt": {
    "Issuer": "ConvocadoFc",
    "Audience": "ConvocadoFc",
    "SigningKey": "CHANGE_ME_TO_A_SECURE_32_CHAR_KEY",
    "AccessTokenMinutes": 15,
    "CookieName": "access_token"
  },
  "RefreshToken": {
    "CookieName": "refresh_token",
    "ExpirationDays": 30,
    "KeyPrefix": "auth:refresh:"
  },
  "Redis": {
    "ConnectionString": "localhost:6379"
  },
  "AuthCookies": {
    "Path": "/",
    "Domain": "",
    "Secure": true,
    "SameSite": "Strict"
  },
  "AppUrls": {
    "ApiBaseUrl": "https://localhost:5001",
    "WebBaseUrl": "https://localhost:3000"
  },
  "Google": {
    "ClientId": "CHANGE_ME_GOOGLE_CLIENT_ID"
  },
  "Email": {
    "FromEmail": "no-reply@convocado.com",
    "FromName": "Convocado",
    "SmtpHost": "smtp.example.com",
    "SmtpPort": 587,
    "SmtpUser": "smtp-user",
    "SmtpPassword": "smtp-password",
    "EnableSsl": true,
    "UseDefaultCredentials": false
  },
  "AllowedHosts": "*"
}
